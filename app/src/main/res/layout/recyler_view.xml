<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="50dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/car_Image"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/placeholderimage"></ImageView>


        <View
            android:id="@+id/divider3"
            android:layout_width="1dp"
            android:layout_marginLeft="135dp"
            android:layout_height="150dp"
            android:background="?android:attr/listDivider" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/car_make"
            android:fontFamily="@font/montserrat"
            android:textSize="15dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="20dp"
            android:text="Car Make"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/car_model"
            android:fontFamily="@font/montserrat"
            android:textSize="15dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="60dp"
            android:text="Car Model"></TextView>

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/addCar_Image_Button"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textSize="10dp"
            android:fontFamily="@font/montserrat"
            android:layout_marginLeft="140dp"
            android:text="Add Car Image">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/deleteCar_Button"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/montserrat"
            android:textSize="10dp"
            android:layout_marginLeft="280dp"
            android:text="Delete Car">

        </Button>

    </androidx.cardview.widget.CardView>

</LinearLayout>